@{
    ViewData["Title"] = "Home Page";

}

@model HotelViewModel

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div>
        <form asp-controller="Hotel" asp-action="Filter">
            <p>
                Search: @Html.TextBoxFor(m => m.Keyword)
                <input type="submit" value="Filter" />
            </p>

            <p>
                @*Rating: @Html.DropDownListFor(m => m.Ratings, new SelectList(Model.Ratings))*@
                Rating: @Html.DropDownListFor(n => n.SelectedRating, new SelectList(Model.Ratings, 1))
                <input type="submit" value="Filter" />
            </p>
        </form>

    </div>
    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Hotels)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Location</td>
                        <td>@item.Rating</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
